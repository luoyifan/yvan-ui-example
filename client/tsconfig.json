{
  "compilerOptions": {
    "target": "es5",
    "module": "AMD",
    "moduleResolution": "node",
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ],
      "@server/*": [
        "../server/src/*"
      ]
    },
    "lib": [
      "es2018",
      "es2017",
      "es2016",
      "es2015.promise",
      "dom",
      "scripthost",
      "es5"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "lodash",
      "jquery",
      "moment"
    ],
    "outDir": "../dist",
    "rootDirs": [
      "./src"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}